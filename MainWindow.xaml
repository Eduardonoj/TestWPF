<Window x:Class="TestWOF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWOF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column ="0" Content="Monto 1"/>
        <TextBox Name="TxtMontoUno" Grid.Row ="0" Grid.Column ="1" />
        <Label Grid.Row="1" Grid.Column ="0" Content="Monto 2"/>
        <TextBox Name="TxtMontoDos" Grid.Row ="1" Grid.Column ="1" />
        <Label Grid.Row="2" Grid.Column ="0" Content="Resultado"/>
        <TextBox Name="TxtResultado" Grid.Row ="2" Grid.Column ="1" />

        <Button Click="ButtonCalcular_Click" Grid.Row ="3" Grid.ColumnSpan ="2" Content="Calcular"  />
    </Grid>
</Window>
